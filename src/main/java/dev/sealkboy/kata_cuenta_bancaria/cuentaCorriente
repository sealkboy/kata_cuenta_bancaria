package dev.sealkboy.kata_cuenta_bancaria;

public class cuentaCorriente extends Cuenta {
    private float sobregiro = 0;

    public cuentaCorriente(float saldoInicial, float tasaAnual) {
        super(saldoInicial, tasaAnual);
    }

    @Override
    public boolean retirar(float cantidad) {
        if (cantidad <= saldo) {
            return super.retirar(cantidad);
        } else {
            sobregiro += (cantidad - saldo);
            saldo = 0;
            retiros++;
            return true;
        }
    }

    @Override
    public void consignar(float cantidad) {
        if (sobregiro > 0) {
            if (cantidad >= sobregiro) {
                cantidad -= sobregiro;
                sobregiro = 0;
            } else {
                sobregiro -= cantidad;
                cantidad = 0;
            }
        }
        super.consignar(cantidad);
    }

    @Override
    public String imprimir() {
        int transacciones = consignaciones + retiros;
        return String.format(
                "Saldo: %.2f, Comisi√≥n Mensual: %.2f, Transacciones: %d, Sobregiro: %.2f",
                saldo, comisionMensual, transacciones, sobregiro);
    }

}

